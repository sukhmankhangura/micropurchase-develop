<%= render partial: 'components/disclaimer' %>
<header class="header">
<div class="usa-grid">
  <div class="header-wrap">
    <div class="usa-grid-one-half">
      <div class="header-title">
        <%= link_to auctions_path, title: 'Home' do %>
          <div class="logo">
            <%= image_tag 'hive-logo.png', alt: 'hive-logo', class: 'logo-img' %>
            <div class="title-wrapper">
              <div class="title"><%= title ||= "Micro-purchase" %> <small><sup><i>alpha</i></sup></small></div>
              <div class="subtitle">A marketplace for open source work</div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="usa-grid-one-half">
      <nav class="header-side">
        <%= render partial: current_user.decorate.nav_drawer_partial %>
      </nav>
    </div>
  </div>
</div>
</header>
